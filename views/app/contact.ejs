<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/contact.css" class="rel" />

<div class="container">
  <div class="row">
    <h1>contact us</h1>
  </div>
  <div class="row">
    <h4 style="text-align: center">We'd love to hear from you!</h4>
  </div>
  <form action="https://formspree.io/f/xzbnvwkp" method="POST">
    <div class="row input-container">
      <div class="col-xs-12">
        <div class="styled-input wide">
          <input type="text" name="name" id="full-name" required="" />
          <label for="full-name">Name</label>
        </div>
      </div>
      <div class="col-md-6 col-sm-12">
        <div class="styled-input">
          <input type="email" name="_replyto" id="email-address" required="" />
          <label for="email-address">Email</label>
        </div>
      </div>
      <div class="col-md-6 col-sm-12">
        <div class="styled-input" style="float: right">
          <input type="telephone" name="telephone" id="telephone" require />
          <label for="telephone">Phone Number</label>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="styled-input wide">
          <textarea rows="5" name="message" id="message" required=""></textarea>
          <label for="message">Message</label>
        </div>
      </div>
      <div class="col-xs-12">
        <button class="btn-lrg submit-btn" type="submit">Send Message</button>
        <!-- <div class="btn-lrg submit-btn">Send Message</div> -->
      </div>
    </div>
  </form>
</div>
